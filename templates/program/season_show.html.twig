{% extends 'base.html.twig' %}

{% block title %}
    {{ program.title }} | Saison {{ season.number }}
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0"> {{ program.title }} </h1>
            <h1> Saison {{ season.number }} </h1>
            <div class="text-white">
                Date de diffusion: {{ season.year }} <br>
                {{ season.description }}
            </div>
            <div>
                <br>
                Liste des épisodes:
                <div class="tab"><br>
                    {% for episode in episodes %}
                        Episode {{ episode.number }}: {{ episode.title }} <br>
                        <a class="tab" href="{{ path('program_episode_show', {programSlug: program.slug, season: season.number, episodeSlug: episode.slug}) }}">
                            Voir la fiche de l'épisode
                        </a><br>
                    {% endfor %}
                </div>
            </div>
            <div class="retour">
                <br><br>
                <a href="{{ path('program_show', {slug : program.slug}) }}">
                    Retour à la fiche du programme
                </a>
            </div>
        </div>
    </div>

{% endblock %}